    while read -r ip_address name; do
        if ping -c 1 "$ip_address" &> /dev/null; then
            echo "Ping to $name ($ip_address)${green}SUCCESS${reset}"
        else
            echo "Ping to $name ($ip_address) ${red}FAIL${reset}"
        fi
    done < "$ip_file"
  
done
